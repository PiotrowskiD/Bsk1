<Window x:Class="BSK1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BSK1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Choose file" HorizontalAlignment="Left" Margin="41,26,0,0" VerticalAlignment="Top" Width="75" Click="FileButton_Click"/>
        <Label Content="Chosen file: " HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top"/>
        <Label x:Name="ChosenFile" Content="" HorizontalAlignment="Left" Margin="85,49,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="EncryptedName" HorizontalAlignment="Left" Height="23" Margin="131,93,0,0" TextWrapping="Wrap" Text="EncryptedName" VerticalAlignment="Top" Width="120"/>
        <Label Content="Encrypted file name:" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="EncryptionTypesCombo" HorizontalAlignment="Left" Margin="10,137,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
