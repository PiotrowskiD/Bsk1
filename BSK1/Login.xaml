<Window x:Class="BSK1.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BSK1"
        mc:Ignorable="d"
        Title="SuperEncryptor 9000" Height="140" Width="300">
    <Grid>
        <TextBox x:Name="Username" Height="23" Margin="82,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="Password" Height="23" Margin="82,41,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="83"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="83"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="10,0,0,10" Width="126" Height="20" VerticalAlignment="Bottom" Click="LoginClick"/>
        <Button Content="Register" HorizontalAlignment="Right" Margin="0,0,10,10" Width="126" Height="20" VerticalAlignment="Bottom" Click="RegisterClick"/>

    </Grid>
</Window>
